program SortFind;
vars
arr[10], len, i, j, aux : int;
found : bool;

main(){
    write("Sort! \n");
    
    #array = [2,6,0,7,2,9,4,2,5,1];
    arr[0] = 2;
    arr[1] = 6;
    arr[2] = 0;
    arr[3] = 7;
    arr[4] = 2;
    arr[5] = 9;
    arr[6] = 4;
    arr[7] = 2;
    arr[8] = 5;
    arr[9] = 1;
    len = 9;

    #print array
    write("Array = [ ");
    from i = 0 to len do{
        write(arr[i], " ");
    }
    write("] \n");

    #sort!
    from i = 0 to len do{
        from j = 0 to (len-i-1) do {
            if (arr[j] > arr[j+1]) then {
                aux = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = aux;
            }
        }
    }

    #print sorted array
    write("Array Sorted = [ ");
    from i = 0 to len do{
        write(arr[i], " ");
    }
    write("] \n");

    #Find
    write("Input number to search: ");
    read(aux);
    found = False;
    i = 0;
    while(i <=len & found != True) do {
        if(arr[i] == aux) then {
            found = True;
        }
        i += 1;
    }
    if(found == True) then{
        write("Number Position : ", i);
    }
    else{
        write("Number not found !");
    }
}