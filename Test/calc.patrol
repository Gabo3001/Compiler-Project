program Calc;
vars
r: int;

# Funciones calculadora normal
int function Sum(a:int; b:int;);{
    return(a+b);
}

int function Sub(a:int; b:int;);{
    return(a-b);
}

int function Mult(a:int; b:int;);{
    return(a*b);
}

int function Div(a:int; b:int;);{
    return(a/b);
}

int function Power(a:int; b:int;);
i, num : int;
{
    
    if(b == 0) then{
        return(1);
    }
    else{
        num = 1;
       from i=1 to b do{
           num *= a;
       }
       return(num);
    }
}

int function Sqrt(a:int;);
i, res : int;
{
    if (a == 0 | a == 1) then {
        return(a);
    }
    i = 1;
    res = 1;
    while (res <= a) do
    {
      i += 1;
      res = i * i;
    }
    return(i - 1);
}

# Funciones calculadora logica
bool function Not(b:bool;);{
    if(b == True) then {
        return(False);
    }
    else {
        return(True);
    }
}

bool function And(b1:bool;b2:bool;);{
    return(b1&b2);
}

bool function Or(b1:bool;b2:bool;);{
    return(b1|b2);
}

bool function Nand(b1:bool;b2:bool;);{
    return(Not(b1&b2));
    #return(Not(And(b1,b2)));
}

bool function Nor(b1:bool;b2:bool;);{
    return(Not(b1|b2));
    #return(Not(Or(b1,b2)));
}

bool function Xor(b1:bool;b2:bool;);{
    
    return((b1&(Not(b2)))|((Not(b1))&b2));
    #return(Or(And(b1,(Not(b2))),And((Not(b1)),b2)));
    

}

void function CalcArit();
iA, iB, res: int;
{
